<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popEnterAnim="@android:anim/slide_in_left"
            app:popExitAnim="@android:anim/slide_out_right" />
    </fragment>

    <fragment
        android:id="@+id/carDetailsFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.CarDetailsFragment"
        android:label="Avtomobil"
        tools:layout="@layout/fragment_car_details">
        <argument
            android:name="carId"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen">
        <action
            android:id="@+id/action_splashScreenFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>

    <fragment
        android:id="@+id/selectedFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.SelectedFragment"
        android:label="fragment_favorite"
        tools:layout="@layout/fragment_selected" >
        <action
            android:id="@+id/action_selectedFragment_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment" />
    </fragment>

    <!-- ✅ AUTH FLOW -->
    <fragment
        android:id="@+id/cabinetFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.CabinetFragment"
        android:label="Şəxsi kabinet"
        tools:layout="@layout/fragment_cabinet">

        <!-- CabinetFragment → VerifyCodeFragment -->
        <action
            android:id="@+id/action_cabinetFragment_to_verifyCodeFragment"
            app:destination="@id/verifyCodeFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right" />

        <!-- CabinetFragment → MainCabinetFragment (auto-verify halı) -->
        <action
            android:id="@+id/action_cabinetFragment_to_mainCabinetFragment"
            app:destination="@id/mainCabinetFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/cabinetFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/verifyCodeFragment"
        android:name="com.example.turboazapp.presentation.auth.VerifyCodeFragment"
        android:label="Nömrənin təsdiqlənməsi"
        tools:layout="@layout/fragment_verify_code">

        <!-- VerifyCodeFragment → MainCabinetFragment -->
        <action
            android:id="@+id/action_verifyCodeFragment_to_mainCabinetFragment"
            app:destination="@id/mainCabinetFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/cabinetFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/mainCabinetFragment"
        android:name="com.example.turboazapp.presentation.profile.MainCabinetFragment"
        android:label="Şəxsi kabinet"
        tools:layout="@layout/fragment_main_cabinet">

        <!-- MainCabinetFragment → CabinetFragment (logout və ya giriş yoxdur) -->
        <action
            android:id="@+id/action_mainCabinetFragment_to_cabinetFragment"
            app:destination="@id/cabinetFragment"
            app:enterAnim="@android:anim/slide_in_left"
            app:exitAnim="@android:anim/slide_out_right"
            app:popUpTo="@id/mainCabinetFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainCabinetFragment_to_carDetailsFragment"
            app:destination="@id/carDetailsFragment" />
    </fragment>

    <!-- ✅ OTHER FRAGMENTS -->
    <fragment
        android:id="@+id/otherFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.OtherFragment"
        android:label="fragment_other"
        tools:layout="@layout/fragment_other" />

    <fragment
        android:id="@+id/selectBrandFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.announcement.SelectBrandFragment"
        android:label="fragment_new_announcement"
        tools:layout="@layout/fragment_select_brand">
        <action
            android:id="@+id/action_newAnnouncementFragment_to_modelListFragment"
            app:destination="@id/modelListFragment" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment3"
        android:name="com.example.turboazapp.presentation.ui.fragment.NewAnnouncementFragment3"
        android:label="fragment_new_announcement3"
        tools:layout="@layout/fragment_select_year" >
        <action
            android:id="@+id/action_newAnnouncementFragment3_to_newAnnouncementFragment4"
            app:destination="@id/newAnnouncementFragment4" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment4"
        android:name="com.example.turboazapp.presentation.ui.fragment.NewAnnouncementFragment4"
        android:label="fragment_new_announcement4"
        tools:layout="@layout/fragment_select_body_type" >
        <action
            android:id="@+id/action_newAnnouncementFragment4_to_newAnnouncementFragment6"
            app:destination="@id/newAnnouncementFragment6" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment5"
        android:name="com.example.turboazapp.presentation.ui.fragment.announcement.SelectColorFragment"
        android:label="fragment_new_announcement5"
        tools:layout="@layout/fragment_select_color" >
        <action
            android:id="@+id/action_newAnnouncementFragment5_to_newAnnouncementFragment7"
            app:destination="@id/newAnnouncementFragment7" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment6"
        android:name="com.example.turboazapp.presentation.ui.fragment.announcement.SelectEngineFragment"
        android:label="fragment_new_announcement6"
        tools:layout="@layout/fragment_select_engine" >
        <action
            android:id="@+id/action_newAnnouncementFragment6_to_newAnnouncementFragment5"
            app:destination="@id/newAnnouncementFragment5" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment7"
        android:name="com.example.turboazapp.presentation.ui.fragment.NewAnnouncementFragment7"
        android:label="fragment_new_announcement7"
        tools:layout="@layout/fragment_select_market" >
        <action
            android:id="@+id/action_newAnnouncementFragment7_to_newAnnouncementFragment8"
            app:destination="@id/newAnnouncementFragment8" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment8"
        android:name="com.example.turboazapp.presentation.ui.fragment.NewAnnouncementFragment8"
        android:label="fragment_new_announcement8"
        tools:layout="@layout/fragment_select_mileage" >
        <action
            android:id="@+id/action_newAnnouncementFragment8_to_newAnnouncementFragment9"
            app:destination="@id/newAnnouncementFragment9" />
    </fragment>

    <fragment
        android:id="@+id/newAnnouncementFragment9"
        android:name="com.example.turboazapp.presentation.ui.fragment.announcement.SelectImagesFragment"
        android:label="fragment_new_announcement9"
        tools:layout="@layout/fragment_select_image" />

    <fragment
        android:id="@+id/addListingHostFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.AddListingHostFragment"
        android:label="fragment_add_listing_host"
        tools:layout="@layout/fragment_add_listing_host" />

    <fragment
        android:id="@+id/modelListFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.ModelListFragment"
        android:label="fragment_model_list"
        tools:layout="@layout/fragment_select_model" >
        <action
            android:id="@+id/action_modelListFragment_to_newAnnouncementFragment3"
            app:destination="@id/newAnnouncementFragment3" />
    </fragment>
    <fragment
        android:id="@+id/aboutAppFragment"
        android:name="com.example.turboazapp.presentation.ui.fragment.AboutAppFragment"
        android:label="fragment_about_app"
        tools:layout="@layout/fragment_about_app" />
    <fragment
        android:id="@+id/addCarDetailsFragment"
        android:name="com.example.turboazapp.AddCarDetailsFragment"
        android:label="fragment_add_car_details"
        tools:layout="@layout/fragment_add_car_details" />
    <fragment
        android:id="@+id/addPriceAndContactFragment"
        android:name="com.example.turboazapp.AddPriceAndContactFragment"
        android:label="fragment_add_price_and_contact"
        tools:layout="@layout/fragment_add_price_and_contact" />

</navigation>