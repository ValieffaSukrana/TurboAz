<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomHintStyle" parent="@style/TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="CustomChipStyle" parent="@style/Widget.MaterialComponents.Chip.Choice">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="chipIconTint">@color/purple</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/purple</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">12dp</item>
    </style>
    <style name="ToolbarTitleBold" parent="TextAppearance.AppCompat.Large">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red</item>
    </style>
</resources>